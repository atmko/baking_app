<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_wicked_orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="details_fragment_margins">
        <item name="android:layout_margin">32dp</item>

    </style>

    <style name="step_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/triple_layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="step_item_card_spacing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/double_layout_margin</item>
    </style>

    <style name="container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fragment_container_height</item>
    </style>

    <style name="divider_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_thickness</item>
        <item name="android:layout_marginLeft">@dimen/divider__tip_margin</item>
        <item name="android:layout_marginStart">@dimen/divider__tip_margin</item>
        <item name="android:layout_marginRight">@dimen/divider__tip_margin</item>
        <item name="android:layout_marginEnd">@dimen/divider__tip_margin</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="divider_line_vertical">
        <item name="android:layout_width">@dimen/divider_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider__tip_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider__tip_margin</item>
        <item name="android:background">@color/color_divider</item>
    </style>

</resources>