<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/container_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_layout_margin"
        android:layout_weight="1">

        <include layout="@layout/container_steps" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/master_detail_flow_divider"
        style="@style/divider_line_vertical"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_layout_margin"
        android:layout_weight="2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/containers_palaceholder_video_and_thumbnail" />

            <include layout="@layout/container_description" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>