<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/standard_layout_margin">

    <ScrollView
        android:id="@+id/details_scroll_view"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back_step_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/containers_video_and_thumbnail" />

            <include layout="@layout/layout_description" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/buttons_back_next" />

</android.support.constraint.ConstraintLayout>