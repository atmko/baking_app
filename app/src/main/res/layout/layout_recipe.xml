<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_layout_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recipe_adapter_touch_selector">

        <ImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_container_height"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/description_recipe_image"/>

        <TextView
            android:id="@+id/name_text_view"
            style="@style/step_item_text"
            android:layout_margin="@dimen/standard_layout_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_image_view"
            tools:text="title" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

